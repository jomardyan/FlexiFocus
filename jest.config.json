{
  "testEnvironment": "node",
  "transform": {},
  "testMatch": ["**/tests/**/*.test.js"],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.test.js"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/tests/"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  }
}
