{
  "name": "flexifocus",
  "version": "1.0.0",
  "description": "Multi-method productivity timer for Chrome",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/ scripts/",
    "format": "prettier --write 'src/**/*.{js,html,css}'",
    "format:check": "prettier --check 'src/**/*.{js,html,css}'",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "type-check": "tsc --noEmit",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "build:check": "npm run type-check && npm run lint && npm run format:check"
  },
  "keywords": [
    "productivity",
    "timer",
    "pomodoro"
  ],
  "author": "jomardyan",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "playwright": "^1.57.0"
  }
}


